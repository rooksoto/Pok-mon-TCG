<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/listFragment"
    >

    <fragment
        android:id="@+id/listFragment"
        android:name="com.rooksoto.pokemontcgcardviewer.view.CardListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_card_list"
        >
        <action
            android:id="@+id/actionListFragmentToCardDetailFragment"
            app:destination="@id/cardDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            />
    </fragment>

    <fragment
        android:id="@+id/cardDetailFragment"
        android:name="com.rooksoto.pokemontcgcardviewer.view.CardDetailFragment"
        android:label="CardDetailFragment"
        tools:layout="@layout/fragment_card_detail"
        >
        <action
            android:id="@+id/actionCardDetailFragmentToListFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            />
        <argument
            android:name="cardId"
            android:defaultValue='""'
            app:argType="string"
            />
    </fragment>
</navigation>